# 应用配置
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# 数据库配置
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/autotest_db
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=password
DB_DATABASE=autotest_db

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AI服务配置
AI_API_KEY=your-openai-api-key
AI_API_BASE=https://api.openai.com/v1
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TIMEOUT=30
AI_RETRY_TIMES=3

# 文件上传配置
UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216

# 存储路径配置
SCREENSHOTS_PATH=./screenshots
REPORTS_PATH=./reports
LOGS_PATH=./logs

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# 邮件配置（可选）
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# 安全配置
PASSWORD_HASH_METHOD=pbkdf2:sha256
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=300

# API配置
API_RATE_LIMIT=100/hour
ENABLE_CORS=True
CORS_ORIGINS=*
API_KEY_REQUIRED=False
API_KEY=your-api-key

# 缓存配置
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=autotest:

# 监控配置
ENABLE_METRICS=True
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# 测试执行配置
MAX_PARALLEL_EXECUTIONS=5
EXECUTION_TIMEOUT=300
EXECUTION_RETRY_TIMES=2
SCREENSHOT_ON_FAILURE=True
VIDEO_RECORDING=False

# 浏览器配置
DEFAULT_BROWSER=chrome
BROWSER_HEADLESS=True
BROWSER_WINDOW_SIZE=1920,1080
BROWSER_TIMEOUT=30

# 报告配置
REPORT_TEMPLATE_DIR=./templates/reports
REPORT_OUTPUT_DIR=./reports
INCLUDE_SCREENSHOTS=True
INCLUDE_LOGS=True
AUTO_GENERATE_DAILY=True
AUTO_GENERATE_WEEKLY=True

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=Asia/Shanghai

# Flower监控配置（可选）
FLOWER_USER=admin
FLOWER_PASSWORD=admin123

# Docker相关配置
DOCKER_MYSQL_ROOT_PASSWORD=autotest123
DOCKER_MYSQL_DATABASE=autotest_db
DOCKER_MYSQL_USER=autotest
DOCKER_MYSQL_PASSWORD=autotest123

# 开发环境配置
DEBUG_TOOLBAR=False
PROFILER=False
TESTING=False

# 生产环境配置
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=120
GUNICORN_BIND=0.0.0.0:5000

# SSL配置（生产环境）
SSL_CERT_PATH=
SSL_KEY_PATH=
FORCE_HTTPS=False